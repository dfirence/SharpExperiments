# Root EditorConfig file
root = true

# Global settings (affect all files)
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# C# specific settings
[*.cs]
dotnet_diagnostic.CA1303.severity = warning
dotnet_diagnostic.CS8618.severity = error
dotnet_style_predefined_type_for_locals_parameters_members = true:suggestion
dotnet_style_require_accessibility_modifiers = always:suggestion
dotnet_style_parentheses_in_arithmetic_binary_operators = always_for_clarity:suggestion
csharp_style_var_elsewhere = false:suggestion
csharp_style_var_when_type_is_apparent = false:suggestion
csharp_style_var_for_built_in_types = false:suggestion
csharp_indent_case_contents = true
csharp_new_line_before_open_brace = all
csharp_preferred_modifier_order = public, protected, private, static, readonly, volatile, unsafe, async
# Require braces for all control statements (if/else/for/while)
csharp_prefer_braces = true:error
# Enforce file-scoped namespaces (namespace Foo;)
csharp_style_namespace_declarations = file_scoped:error
# Enforce namespace matches file system folder structure
dotnet_diagnostic.IDE0290.severity = error
# Enforce alphabetical sorting of using directives
dotnet_diagnostic.IDE0005.severity = error
dotnet_separate_import_directives = true
